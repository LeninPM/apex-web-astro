---
// src/layouts/Layout.astro (Versión final con SEO y Favicon)

// 1. IMPORTAMOS LOS ESTILOS Y COMPONENTES
import '../styles/theme.scss'; // Importante: Estilos primero
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import WhatsappButton from "../components/WhatsappButton.astro";

export interface Props {
  title: string;
  // ¡NUEVO! Ahora aceptamos una descripción opcional para SEO
  description?: string;
}

// Si no pasamos descripción en una página, usamos esta por defecto:
const {
  title,
  description = "Consultoría Apex: Expertos en Selección de Talento, Psicología Ocupacional y Desarrollo Web en Perú."
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  
    <link rel="icon" type="image/webp" href="/images/logos/LOGO_ORIGINAL_RECORTADO.WEBP" />
    <link rel="alternate icon" type="image/x-icon" href="/images/logos/icono/LOGO-NEGATIVO.ico?v=2" />
    
    <meta name="generator" content={Astro.generator} />
    
    <link rel="preconnect" href="https://cdn.jsdelivr.net"> 
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    
    <title>{title} | Consultoría Apex</title>
    <meta name="description" content={description} />
    
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
  </head>
  <body>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />

    <WhatsappButton />

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>

      <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      // Inicia la animación
      AOS.init({
        duration: 800, // Duración de la animación en milisegundos
        once: true,    // Si true, la animación solo pasa una vez al bajar
        offset: 100,   // Empieza a animar 100px antes de que el elemento sea visible
      });
    </script>
    
  </body>
</html>