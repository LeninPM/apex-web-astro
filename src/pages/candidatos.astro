// src/pages/candidatos.astro
import Layout from '../layouts/Layout.astro';
---
<Layout title="Oportunidades para Candidatos">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 class="display-5">Impulsa tu Carrera</h1>
            <p class="lead">Te ayudamos a alcanzar tu máximo potencial profesional.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Creación de CV </h5>
                        <p class="card-text">
                            Diseñamos y optimizamos tu currículum para destacar en 
                            los procesos de selección.
                        </p>
                        <a href="/contacto" class="btn btn-primary">¡Comenzar ahora!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>