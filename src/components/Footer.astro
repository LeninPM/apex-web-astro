---
// src/components/Footer.astro
import datos from '../data/sitio.json';

// Definimos los tipos de iconos
const iconMap: Record<string, string> = {
  instagram: "bi bi-instagram",
  facebook: "bi bi-facebook",
  tiktok: "bi bi-tiktok",
  linkedin: "bi bi-linkedin",
  youtube: "bi bi-youtube"
};

const anio = new Date().getFullYear();
---
<footer class="bg-dark text-white pt-5">
    <div class="container">
        <div class="row">

            <div class="col-lg-3 col-md-6 mb-4">
                <a class="navbar-brand fw-bold text-white fs-4 d-block mb-3" href="/">
                    <img src="/images/logos/LOGO_NEGATIVO.webp"
                     alt="Logo de Consultoría Apex" width="150" 
                     height="auto" class="d-inline-block align-text-top me-2">
                </a>
                <p class="text-secondary small">{datos.quienesSomos}</p>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <h5 class="fw-bold mb-3">Contáctanos</h5>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="bi bi-envelope me-2 text-warning"></i>
                        <a href={`mailto:${datos.contacto.email}`} class="text-white text-decoration-none">
                            {datos.contacto.email}
                        </a>
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-phone me-2 text-warning"></i>
                        <a href={`tel:${datos.contacto.telefono}`} class="text-white text-decoration-none">
                            {datos.contacto.telefono}
                        </a>
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-geo-alt me-2 text-warning"></i>
                        {datos.contacto.direccion}
                    </li>
                </ul>
            </div>

            <div class="col-lg-2 col-md-6 mb-4">
                <h5 class="fw-bold mb-3">Secciones</h5>
                <ul class="list-unstyled">
                    <li><a href="/" class="text-white text-decoration-none">Inicio</a></li>
                    <li><a href="/conocenos" class="text-white text-decoration-none">Conócenos</a></li>
                    <li><a href="/empresas" class="text-white text-decoration-none">Empresas</a></li>
                    <li><a href="/candidatos" class="text-white text-decoration-none">Candidatos</a></li>
                    <li><a href="/contacto" class="text-white text-decoration-none">Contacto</a></li>
                </ul>
            </div>

            <div class="col-lg-4 col-md-6 mb-4 text-lg-end text-md-start">
                <h5 class="fw-bold mb-3">Síguenos</h5>
                
                <div class="d-flex d-lg-block justify-content-center justify-content-lg-end">
                    {datos.redesSociales.map(red => (
                        <a 
                          href={red.url} 
                          target="_blank" 
                          class="link-light me-3 fs-4"
                          aria-label={`Visita nuestro ${red.nombre}`}
                        ><i class={iconMap[red.nombre.toLowerCase()]}></i></a>
                    ))}
                </div>
            </div>
        </div>

        <div class="border-top py-3 mt-4 text-center">
            <p class="mb-0 small text-secondary">
                &copy; {new Date().getFullYear()} Consultoría Apex. Todos los derechos reservados.
            </p>
        </div>

    </div>
</footer>