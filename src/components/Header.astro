---
// src/components/Header.astro
// Este componente ahora controla AMBAS barras de navegación.
---

<header>
  <nav class="bg-light border-bottom py-1 d-none d-lg-block">
    <div class="container-fluid">
      <ul class="nav ms-auto">
        <li class="nav-item">
          <a class="nav-link py-0" href="/empresas">Para Empresas</a>
        </li>
        <li class="nav-item">
          <a class="nav-link py-0" href="/candidatos">Para Candidatos</a>
        </li>
      </ul>
    </div>
  </nav>

  <nav class="navbar navbar-expand-lg bg-body-tertiary shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">
        <img
          src="/favicon.svg"
          alt="Apex Logo"
          width="30"
          height="24"
          class="d-inline-block align-text-top"
        />
        Consultoría Apex
      </a>

      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/">Inicio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/conocernos">Conócenos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contacto">Contacto</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
