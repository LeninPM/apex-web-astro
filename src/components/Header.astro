---
// src/components/Header.astro
// Este componente ahora controla AMBAS barras de navegación.

import servicios from '../data/servicios.json';
---


<header>
  <nav class="bg-light border-bottom py-1 d-none d-lg-block">
    <div class="container-fluid">
      <ul class="nav ms-auto">
        <li class="nav-item">
          <a class="nav-link py-0" href="/empresas">Para Empresas</a>
        </li>
        <li class="nav-item">
          <a class="nav-link py-0" href="/candidatos">Para Candidatos</a>
        </li>
      </ul>
    </div>
  </nav>

  <nav class="navbar navbar-expand-lg bg-body-tertiary shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">
        <img
          src="/images/logos/LOGO_ORIGINAL_RECORTADO.webp"
          alt="Apex Logo"
          width="150"
          height="auto"
          class="d-inline-block align-text-top">
      </a>

      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
            <a class="nav-link" href="/">Inicio</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/conocenos">Conócenos</a>
        </li>
        
        <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle fw-bold" id="navbarDropdownServicios" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Servicios
    </a>
            <ul class="dropdown-menu">
                {servicios.serviciosEmpresa.map(servicio => (
                    <li>
                        <a class="dropdown-item" href={`/servicios/${servicio.slug}/`}>
                            {servicio.nombre}
                        </a>
                    </li>
                ))}
            </ul>
        </li>
        
        <li class="nav-item">
            <a class="nav-link" href="/contacto">Contacto</a>
        </li>
    </ul>
</div>
    </div>
  </nav>
</header>
